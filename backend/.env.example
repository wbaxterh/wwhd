# WWHD Backend Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# LLM API Keys (Choose one or both)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENROUTER_API_KEY=sk-or-your-openrouter-key-here

# Model Selection
MODEL_CHAT=gpt-4o-mini              # For chat completions
MODEL_EMBED=text-embedding-3-small   # For embeddings
ENABLE_OPENAI=true
ENABLE_OPENROUTER=false

# Qdrant Configuration
QDRANT_URL=http://localhost:6333     # In production: http://qdrant:6333
QDRANT_API_KEY=optional-api-key

# Database
SQLITE_PATH=/data/wwhd.db            # In production: /data/wwhd.db
# For local development, use: ./wwhd.db

# Authentication
JWT_SECRET=your-secure-jwt-secret-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]
ALLOW_CREDENTIALS=true

# Application Settings
APP_ENV=development                  # development, staging, production
LOG_LEVEL=INFO                       # DEBUG, INFO, WARNING, ERROR, CRITICAL
DEBUG_MODE=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60                # seconds

# Token Limits
MAX_TOKENS_PER_RESPONSE=2000
MAX_CONTEXT_TOKENS=4000

# RAG Settings
CHUNK_SIZE=500
CHUNK_OVERLAP=50
TOP_K_RETRIEVAL=5
MIN_RELEVANCE_SCORE=0.7

# Agent Settings
ORCHESTRATOR_MODEL=gpt-4o-mini
SPECIALIST_MODEL=gpt-4o-mini
ENABLE_STREAMING=true

# AWS Settings (for production)
AWS_DEFAULT_REGION=us-west-2